<p>
  <%= f.label :content, "Question" %>  <br>
  <%= f.text_area :content, :rows => 3 %>
  <% unless @survey.new_record? %>
      <%= f.check_box :_destroy %>
      <%= f.label :_destroy, "Remove Question" %>
  <% end %>
<p>
  <%= f.fields_for :answers do |answer| %>
      <%= render 'answer', :f => answer %>
  <% end  %>
</p>

